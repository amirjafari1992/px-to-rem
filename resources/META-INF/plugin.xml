<idea-plugin url="www.jetbrains.com">
    <id>https://github.com/yclnycl</id>
    <name>idea px to rem</name>
    <version>1.0</version>
    <vendor email="jafari.work@gmail.com" url="https://github.com/amirjafari1992">Amir Jafari</vendor>

    <description>Pixel to Rem convertor</description>

    <change-notes>
        init commit
        Use the (alt + d) shortcut key to convert the selected xxxpx to xxxrem
    </change-notes>
    <idea-version since-build="131"/>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <action id="IdeaPx2Rem"
                class="IdeaPx2Rem"
                text="IdeaPx2Rem"
                description="IdeaPx2Rem">
            <keyboard-shortcut keymap="$default" first-keystroke="alt d"/>
        </action>
    </actions>

</idea-plugin>